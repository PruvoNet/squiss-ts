{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "checkJs": false,
    "allowJs": false,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noImplicitUseStrict": false,
    "preserveSymlinks": true,
    "rootDir": "src",
    "sourceMap": true,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}
